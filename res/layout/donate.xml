<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<TextView
		android:id="@+id/donate_explain"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:clickable="false"
		android:focusable="false"
		android:textSize="18sp"
		android:padding="10dip"
		android:text="@string/donate_explain_text"
		android:layout_alignParentTop="true"
	/>
	
	<Button
		android:padding="10dip"
		android:id="@+id/donate_button"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/donate"
		android:onClick="startDonation"
		android:layout_alignParentBottom="true"
	/>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/donate_button"
		android:orientation="horizontal"
		android:layout_alignRight="@id/donate_button"
		android:layout_alignLeft="@id/donate_button"
	>
		<TextView
			android:id="@+id/currency_symbol"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:clickable="false"
			android:focusable="false"
			android:textSize="22sp"
			android:padding="8dip"
			android:text="$"
			android:gravity="center_vertical"
		/>
		<EditText
			android:padding="10dip"
			android:id="@+id/donate_amount"	
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:inputType="number|numberDecimal"
		/>
	</LinearLayout>
</RelativeLayout>

